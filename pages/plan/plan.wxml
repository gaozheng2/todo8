<!--【日程规划】页面-->
<view class="{{theme.name}} container">

    <!-- 标题行 -->
    <view class='box-row box-top'>
        <!-- 帮助按钮 -->
        <help theme="{{theme}}"></help>

        <!-- 日历按钮 -->
        <view class='box-row box-center box-title'>
            <image class='icon-small' src="/imgs/icon/{{theme.iurl}}/date.png"></image>
        </view>

        <!-- 共享按钮 -->
        <image class='icon-small' src="/imgs/icon/{{theme.iurl}}/share.png"></image>
    </view>

    <view class='box-row box-main line'>
        <!-- 日期列 -->
        <view class='box-column box-height line plan-date'>
            <view class='box-row line-gap plan-date-item'>
                <view class="box-row font-category">每天</view>
            </view>
            <view class='box-row line-gap plan-date-item'>
                <view class="box-row line-key font-key plan-date-current">每周一</view>
            </view>
            <view class='box-row line-gap plan-date-item'>
