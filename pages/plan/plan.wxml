            </view>
            <view class='box-row line-gap plan-date-item'>
                <view class="box-row font-category">每周五</view>
            </view>
            <view class='box-row line-gap plan-date-item'>
                <view class="box-row font-category">每周六</view>
            </view>
            <view class='box-row line-gap plan-date-item'>
                <view class="box-row font-category">每周日</view>
            </view>
            <view class='box-row line plan-date-item'>
                <view class="box-row font-category">每月</view>
            </view>
			<view class='box-row line plan-date-item'>
                <view class="box-row font-date">记忆</view>
            </view>
        </view>

        <!-- 事项列 -->
        <scroll-view scroll-y="true" enable-back-to-top='true' class='box box-column box-height plan-todo'>
