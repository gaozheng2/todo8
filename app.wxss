/* 通用样式文件 */

/* 引用主题文件 */
@import '/theme/default.wxss'; 
@import '/theme/mercy.wxss'; 
@import '/theme/genji.wxss'; 
@import '/theme/windowmaker.wxss'; 

/* 页面样式 */
page {
	height: 100%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
	justify-content: flex-start;
    align-items: center;
    box-sizing: border-box;
	text-align: center;
    font-family: "Microsoft Yahei";
	font-size: 30rpx;
}

/* 容器样式 */
.box-row {
	display: flex;
	flex-direction: row;
	justify-content: space-around;	
	align-items: center;
	flex-wrap: wrap;
	align-content: center;
	box-sizing: border-box;
}

.box-column {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	box-sizing: border-box;
}

.box-center {
	justify-content: center;
}

.box-width {
	width: 100%;
}

.box-height {
	height: 100%;
}

.box-top {
	width: 680rpx;
	height: 120rpx;
}

.box-title {
	width: 500rpx;
}

.box-main {
	width: 100%;
	height: 100%;
	border-top: 1px solid;
	border-bottom: 1px solid;
}

.box-gap {
	width: 100%;
	height: 50rpx;
}

.box-blank {
	height: 130rpx;
}

.box-musk {
	position: absolute;
	top: 0;
	left: 0;
	z-index: 15;
	width: 100%;
	height: 100%;
}

.box-border {
	border: 2px solid;
	border-radius: 10rpx;
}

/* 图标样式 */
.icon {
	width: 70rpx;
	height: 70rpx;
}

.icon-small {
	width: 60rpx;
	height: 60rpx;
}

.icon-micro {
	width: 50rpx;
	height: 50rpx;
}

.icon-disable {
	filter: grayscale();
}

.icon-save {
	margin-bottom: 10rpx;
}

/* 头像样式 */
.userinfo-avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
	border: 2px solid;
}

/* 字体样式 */
.font-huge {
	font-size: 70rpx;
}

.font-big {
	font-size: 36rpx;
}

.font-small {
	font-size: 24rpx;
}

.font-underline {
	border-bottom: 1px solid;
}